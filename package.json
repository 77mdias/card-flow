{
  "name": "card-flow",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run tests",
    "test:watch": "vitest tests",
    "test:e2e": "playwright test",
    "prisma:generate": "bun --env-file=.env.local prisma generate",
    "prisma:migrate:dev": "bun --env-file=.env.local prisma migrate dev",
    "prisma:migrate:deploy": "bun --env-file=.env.local prisma migrate deploy",
    "prisma:migrate:status": "bun --env-file=.env.local prisma migrate status",
    "prisma:studio": "bun --env-file=.env.local prisma studio",
    "auth:schema:generate": "bunx @better-auth/cli@latest generate --config lib/auth-cli.ts --yes"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "better-auth": "^1.4.18",
    "next": "16.1.6",
    "nodemailer": "^8.0.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "server-only": "^0.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "prisma": "6.19.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
